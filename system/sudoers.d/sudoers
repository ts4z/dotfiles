
tjs     ALL = NOPASSWD: /usr/bin/apt install,\
                        /usr/bin/apt update,\
                        /usr/bin/apt upgrade,\
			/usr/bin/apt upgrade -y,\
                        /usr/bin/apt dist-upgrade,\
			/usr/bin/do-release-upgrade,\
			/usr/bin/apt-get update,\
			/usr/bin/apt-get upgrade,\
			/usr/bin/apt-get upgrade -y,\
			/sbin/reboot
